<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestDemo.MainPage">

    <VerticalStackLayout
            Spacing="25"            Padding="30,0"             VerticalOptions="Center" HorizontalOptions="Center">
        <Button Command="{Binding GetAllUsersCommand}" Text="Get All User" />
        <Button Command="{Binding GetSingleUserCommand}" Text="Get Single" />
        <Button Command="{Binding AddUserCommand}" Text="Add User" />
        <Button Command="{Binding UpdateUserCommand}" Text="Update User" />
        <Button Command="{Binding DeleteUserCommand}" Text="Delete User" />
    </VerticalStackLayout>
</ContentPage>